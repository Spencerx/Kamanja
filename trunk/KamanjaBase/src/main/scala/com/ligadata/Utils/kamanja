#!/usr/bin/env bash
jar_full_path=$(which jar)

if [ "$?" != "0" ]; then
	echo "Not found java home directory."
	exit 1
fi

scala_full_path=$(which scala)

if [ "$?" != "0" ]; then
	echo "Not found scala home directory."
	exit 1
fi

pwdnm=$(pwd -P)

JAVA_HOME=$(dirname $(dirname $jar_full_path))
SCALA_HOME=$(dirname $(dirname $scala_full_path))

if [ -f ~/MetadataAPIConfig.properties ] ; then
rm ~/MetadataAPIConfig.properties
fi
echo SCALA_HOME=$SCALA_HOME >> ~/MetadataAPIConfig.properties
echo JAVA_HOME=$JAVA_HOME >> ~/MetadataAPIConfig.properties
echo NOTIFY_ENGINE=YES >> ~/MetadataAPIConfig.properties
echo MetadataSchemaName=metadata >> ~/MetadataAPIConfig.properties
echo MetadataStoreType=hashmap >> ~/MetadataAPIConfig.properties
echo MetadataLocation=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/storage >> ~/MetadataAPIConfig.properties
echo ROOT_DIR=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/ >> ~/MetadataAPIConfig.properties
echo JAR_TARGET_DIR=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/application >> ~/MetadataAPIConfig.properties
echo MANIFEST_PATH=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/config/manifest.mf >> ~/MetadataAPIConfig.properties
echo CLASSPATH=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/kamanjamanager_2.10-1.0.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/guava-18.0.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/metadata_2.10-1.0.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/kamanjabase_2.10-1.0.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/scala-library-2.10.4.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/basefunctions_2.10-0.1.0.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/messagedef_2.10-1.0.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/methodextractor_2.10-1.0.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/pmmlcompiler_2.10-1.0.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/bootstrap_2.10-1.0.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/joda-time-2.3.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/joda-convert-1.6.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/basetypes_2.10-0.1.0.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/pmmludfs_2.10-1.0.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/pmmlruntime_2.10-1.0.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/json4s-native_2.10-3.2.9.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/json4s-ast_2.10-3.2.9.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/jackson-databind-2.3.1.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/jackson-annotations-2.3.0.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/jackson-core-2.3.1.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/log4j-1.2.17.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/json4s-core_2.10-3.2.9.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/json4s-jackson_2.10-3.2.9.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/scala-library-2.10.4.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/json4s-core_2.10-3.2.9.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/jsondatagen_2.10-0.1.0.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/jsontools-core-1.7-sources.jar:jsontools-core-1.7.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/spray-json_2.10-1.2.5.jar:$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/exceptions_2.10-1.0.jar >> ~/MetadataAPIConfig.properties
echo COMPILER_WORK_DIR=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/workingdir >> ~/MetadataAPIConfig.properties
echo MODEL_FILES_DIR=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/input/application-1-HelloWorld/metadata/model/ >> ~/MetadataAPIConfig.properties
echo TYPE_FILES_DIR=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/config >> ~/MetadataAPIConfig.properties
echo FUNCTION_FILES_DIR=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/config >> ~/MetadataAPIConfig.properties
echo CONCEPT_FILES_DIR=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/config >> ~/MetadataAPIConfig.properties
echo MESSAGE_FILES_DIR=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/input/application-1-HelloWorld/metadata/message/ >> ~/MetadataAPIConfig.properties
echo CONTAINER_FILES_DIR=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/config >> ~/MetadataAPIConfig.properties
echo CONFIG_FILES_DIR=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/config >> ~/MetadataAPIConfig.properties
echo MODEL_EXEC_LOG=true >> ~/MetadataAPIConfig.properties
echo JarPaths=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system,$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/application >> ~/MetadataAPIConfig.properties
echo SECURITY_IMPL_JAR=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/simpleapacheshiroadapter_2.10-1.0.jar  >> ~/MetadataAPIConfig.properties
echo SECURITY_IMPL_CLASS=com.ligadata.Security.SimpleApacheShiroAdapter  >> ~/MetadataAPIConfig.properties
echo AUDIT_IMPL_JAR=$(brew --prefix)/Cellar/kamanja/0.0.1/bin/lib/system/auditadapters_2.10-1.0.jar  >> ~/MetadataAPIConfig.properties
echo ZNODE_PATH=/ligadata >> ~/MetadataAPIConfig.properties
echo API_LEADER_SELECTION_ZK_NODE=/ligadata >> ~/MetadataAPIConfig.properties
echo ZOOKEEPER_CONNECT_STRING=localhost:2181 >> ~/MetadataAPIConfig.properties
echo SERVICE_HOST=localhost >> ~/MetadataAPIConfig.properties
echo SERVICE_PORT=8081 >> ~/MetadataAPIConfig.properties
echo DO_AUDIT=NO >> ~/MetadataAPIConfig.properties
echo DO_AUTH=NO >> ~/MetadataAPIConfig.properties
IFS=' ' read -a array <<< $@
#if config provided, update or add to the config file
if [ "${array[0]}" = "config" ]; then
  #check if key present in file. If not add to the file. Else update it.
  while read line
  do
  echo $line | grep ${array[1]} >> /dev/null
  if [ $? = 0 ]; then
#do nothing
  echo ""
  else
    #add other lines
    echo $line >> ~/MetadataAPIConfig.temp
  fi
  done < ~/MetadataAPIConfig.properties
  echo "${array[1]}=${array[2]}" >> ~/MetadataAPIConfig.temp
  mv ~/MetadataAPIConfig.temp ~/MetadataAPIConfig.properties
fi

java -jar $(brew --prefix)/Cellar/kamanja/0.0.1/bin/bin/MetadataAPI-1.0 $@

